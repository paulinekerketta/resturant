<p id="notice"><%= notice %></p>

<h1>Dailycashes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Sale</th>
      <th>Discount</th>
      <th>Pay card</th>
      <th>Paid online</th>
      <th>Purchase</th>
      <th>Driver paid</th>
      <th>Lodgement</th>
      <th>Over under</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dailycashes.each do |dailycash| %>
      <tr>
        <td><%= dailycash.date %></td>
        <td><%= dailycash.sale %></td>
        <td><%= dailycash.discount %></td>
        <td><%= dailycash.pay_card %></td>
        <td><%= dailycash.paid_online %></td>
        <td><%= dailycash.purchase %></td>
        <td><%= dailycash.driver_paid %></td>
        <td><%= dailycash.lodgement %></td>
        <td><%= dailycash.over_under %></td>
        <td><%= link_to 'Show', dailycash %></td>
        <td><%= link_to 'Edit', edit_dailycash_path(dailycash) %></td>
        <td><%= link_to 'Destroy', dailycash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

